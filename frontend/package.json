{
  "name": "tiny-pet-app",
  "version": "1.0.0",
  "scripts": {
    "build": "esbuild src/app.js --bundle --minify --outfile=dist/app.js",
    "copy:html": "cp src/index.html dist/index.html",
    "start": "npm run copy:html && esbuild src/app.js --bundle --outfile=dist/app.js --servedir=dist --watch"
  },
  "dependencies": {
    "mithril": "^2.2.2"
  },
  "devDependencies": {
    "esbuild": "^0.20.2"
  }
}
